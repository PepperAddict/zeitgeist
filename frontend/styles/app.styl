@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&display=swap');

html,
body,
#root, #app {
  margin: 0;
  padding: 0;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}
div {
    height: 100%;
    width: 100%;
}

body {
  font-family: 'Inter var', sans-serif;
  background: linear-gradient(155deg, #ffffff 20%, #a5a3a3);
  color: #101015;
}
.mode-container
    position: fixed;
    left: 0;
    top: 0;
    z-index: -1;
    width: 100%;
    height: 100vw;
canvas 
    position: relative;
    width: 100vw !important;
    height: 100vh !important;

.home-container 
    width: 100%;
    margin: auto;
    overflow:hidden;
    box-sizing: border-box;
    display: grid;
    place-content: center;
    height: 100%;
form 
    display: grid;
    position: relative;
    width: 100%;
    margin: 20px 0;
    padding: 20px 0;
    button 
        justify-self: end;
        margin: 0px;
        border-radius: 5px;
        @media screen and (max-width: 600px) 
            position: relative;
            margin: 10px 0;
    p  
    input 
        width: 100%;
        height: 50px;
        border: 2px solid #ccc;
        border-radius: 5px;
        padding: 5px;
        box-sizing: border-box;
        font-size: 18px;
        margin: 10px;

button 
    height: 40px;
    width: 150px;
    margin: 5px 0;
    float: right;
    cursor: pointer;
    background: #00b2d8;
    color: white;
    border: 0px;
    font-weight: bold;
    font-size: 1.5 rem;
    text-transform: uppercase;
    transition: .3s;
    &:hover 
        background: hotpink;
        transition: .3s;

