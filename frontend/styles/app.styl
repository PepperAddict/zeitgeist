@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Noto+Serif+Display&display=swap');
html,
body,
#root, #app {
  margin: 0;
  padding: 0;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
}
body {
    font-family: 'Noto Serif Display', serif;
    color: #101015;
}
.mode-container
    // position: fixed;
    // left: 0;
    // top: 0;
    // z-index: -1;
    width: 100%;
    height: 100vw;
canvas 
    position: relative;
    width: 100vw !important;
    height: 100vh !important;

.home-container 
    width: 100%;
    margin: auto;
    overflow:hidden;
    box-sizing: border-box;
    display: grid;
    place-content: center;
    height: 100%;
    position: fixed;
    top: 0px;
form 
    display: grid;
    padding: 20px 0;
    max-width: 500px;
    width: 100%;
    margin: auto;
    button 
        justify-self: end;
        margin: 0px;
        border-radius: 5px;
        @media screen and (max-width: 600px) 
            position: relative;
            margin: 10px 0;
    p  
    input 
        width: 100%;
        height: 50px;
        border: 1px dotted #ccc;
        border-radius: 5px;
        padding: 5px;
        box-sizing: border-box;
        font-size: 18px;
        margin: 0 0 10px;
        outline: 1px solid #ccc;

button 
    height: 40px;
    width: 150px;
    margin: 5px 0;
    float: right;
    cursor: pointer;
    background: #00B0FF;;
    color: white;
    border: 0px;
    font-weight: bold;
    font-size: 1.5 rem;
    font-family: Arial, Helvetica, sans-serif;
    text-transform: uppercase;
    transition: .3s;
    letter-spacing: 5px;
    &:hover 
        background: #009BE1;
        transition: .3s;

.logo 
    width: 150px;
    position: absolute;
    top: -90px;
    z-index: 4;
    right: 0;
.boxContainer 
    display: flex;
    position: relative;
    max-width: 800px;
    width: 100vw;
    form 
        position: absolute;
        transform: translateX(-50%) translateY(-50%);
        top: 50%;
        left: 50%;
.box1
    width: 50%;
    height: 300px;
    background: #00B0FF;
    box-shadow: 13px 3px 30px rgba(0, 0, 0, 0.2);
    margin-top: -50px
    position: relative;
    span
        position: absolute;
        bottom: 10px;
        right: 10px;
        color: white;
        letter-spacing: 5px;
        font-family: Arial, Helvetica, sans-serif
.box2 
    width: 50%;
    height: 300px;
    box-shadow: 13px 3px 30px rgba(0, 0, 0, 0.2);
    background: white;
    position: relative;
    span 
        position: absolute;
        top: 10px;
        color: #00B0FF;
        left: 10px;
        font-family: Arial, Helvetica, sans-serif;
        letter-spacing: 5px;

.backdrop 
    position: fixed;
    top: 0px;
    width: 100%;
    height: 100%;
    backdrop-filter: blur(60px);
    background-color: rgba(255, 255, 255, 0.2);
    z-index: -1;