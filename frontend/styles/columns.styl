.column-container
    padding: 30px 15px;
    background-image: linear-gradient(to bottom, #ffffff, #f9f9f9, #f4f4f4, #eeeeee, #e9e9e9);
    border-radius: 0 0 10px 10px;
    h2 
        letter-spacing: 2px;
        padding: 10px;
        border-bottom: 1px dotted lightgray;
        background: rgba(255, 255, 255, 0.5);
    button
        background: white;
        border-radius: 15px;
        border: 1px solid #cdcdcd;
    textarea 
        border-radius: 0px;
        width: 100%;
        height: 50px;
        padding: 15px;
        font-family: Arial, Helvetica, sans-serif;
        border: 1px solid #cdcdcd;
        box-sizing: border-box;
        max-width: 500px;
        min-width: 200px;
        min-height: 200px;
        max-height: 900px;
        border-radius: 10px;

    textarea::placeholder
        font-family: Arial, Helvetica, sans-serif;
    textarea:focus-visible
        outline: 0px;
        box-shadow: 13px 3px 30px rgba(0, 0, 0, 0.2);


.tabs-container 
    display: flex;
    font-family: Arial, Helvetica, sans-serif;
    grid-gap: 10px;
    overflow: auto;
    @media screen and (max-width: 768px) 
        max-width: 300px;
        grid-gap: 1px;
    .tab 
        padding: 15px;
        color: white;
        cursor: pointer;
        font-weight: 600;
        letter-spacing: 2px;
        text-align: center;
        width: 150px;
        border-radius: 15px 15px 0 0;
        @media screen and (max-width: 768px)
            padding: 5px;
            width: auto;
            border-radius: 5px 5px 0 0;
    
.listeningContainer 
    font-family: Arial, Helvetica, sans-serif;
    background: rgba(255, 255, 255, 0.5);
    box-sizing: border-box;
    font-weight: 600;
    margin-bottom: 10px;
    color: white;
    font-size: 14px;
    cursor: pointer;
    .listen 
        width: 100%;
        padding: 10px;
        display: block;
        color: #323232;
        font-size: 16px;
        letter-spacing: 3px;
    span 
        padding: 10px;
        box-sizing: border-box;
    span.sayThis
        color: white;
        font-weight: 800;
    .active 
        animation: pulse 5s ease-out infinite;
        width: 100%;
        display: block;
        padding: 5px;
.modal 
    width: 100%;
    position: fixed;
    top: 0px;
    height: 100vh;
    background: green;


.col-START
    border-top: 13px solid #1CBAFF;
    box-shadow: 13px 13px 30px rgba(0,127, 184, 0.2);
    button 
        color: #00B0FF
        box-shadow: 3px 3px 30px rgba(0,127, 184, 0.2);
    textarea::placeholder
        color: #0071a4
    p 
        box-shadow: 3px 3px 30px rgba(0,127, 184, 0.2);
.col-STOP
    border-top: 13px solid #FF476D;
    box-shadow: 13px 3px 30px rgba(255, 71, 109, 0.2);
    button
        color: #FF476D
        box-shadow: 3px 3px 30px rgba(255, 71, 109, 0.2);
    textarea::placeholder 
        color: #FF476D
    p 
        box-shadow: 3px 3px 30px rgba(255, 71, 109, 0.2);
.col-CONTINUE
    border-top: 13px solid #4EBC70;
    box-shadow: 13px 13px 30px rgba(4, 196, 125, 0.2);
    button 
        color: #4EBC70;
        box-shadow: 3px 3px 30px rgba(4, 196, 125, 0.2);
    textarea::placeholder 
        color: #4EBC70
    p 
        box-shadow: 3px 3px 30px rgba(4, 196, 125, 0.2);
.col-ACTION
    border-top: 13px solid #8700b3;
    box-shadow: 13px 13px 30px rgba(4, 196, 125, 0.2);
    button 
        color: #8700b3;
        box-shadow: 3px 3px 30px rgba(4, 196, 125, 0.2);
    textarea::placeholder 
        color: #8700b3
    p 
        box-shadow: 3px 3px 30px rgba(135, 0, 179, 0.2);

.bg-START
    background-image: linear-gradient(to bottom, #75cdf5, #65c8f7, #52c4fa, #3dbffc, #1cbaff);
.bg-STOP
    background-image: linear-gradient(to bottom, #ff7793, #ff6c8a, #ff6181, #ff5577, #ff476d);
.bg-CONTINUE
    background-image: linear-gradient(to bottom, #4fd176, #4fcc75, #4fc673, #4ec172, #4ebc70);
.bg-ACTION
    background-image: linear-gradient(to bottom, #a309d5,  #8700b3);


@keyframes pulse 
    0% 
        background-color: #606060;
    50%
        background-color: #2f2f2f;
    100%
        background-color: #606060;
