.main-container 
    width: 100%;
    font-size: 1.2rem;
    overflow: hidden;
    padding: 30px;
    box-sizing: border-box;

.navigation-container 
    .active 
        background: hotpink;

.chat-container

    counter-reset: item-counter;
    column-gap: 0;
    @media screen and (max-width: 600px) 
        display: grid;
    p 
        break-inside: avoid;
        padding: 15px;
        margin: 5px;
        border: 1px solid #ccc;
        border-radius: 5px;
        display: grid;
        place-items: center;
    .img-container 
        display: flex;
        position: relative;
        break-inside: avoid;
        padding: 5px;
        border: 1px solid #ccc;
        margin: 5px;
        border-radius: 5px;
        strong 
            position: absolute;
            top: 5px;
            left: 5px;
            z-index: 2;
            background: rgba(255, 255, 255, 0.8);
            width: auto;
            box-sizing: border-box;
            padding: 15px;
            border-radius: 20%;
    img 
        display: flex;
        width: 100%;
        overflow: hidden;
        padding: 5px;
        object-fit: cover;
    .chat
        position: relative;
        span 
            position: absolute;
            top: 10px;
            right: 0px;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            color: red;
            cursor: pointer;
            background: white;
            display: grid;
            place-items: center;
